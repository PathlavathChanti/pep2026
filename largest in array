class Solution {
  public:
    int largest(vector<int> &arr) {
        if (arr.empty()) return -1; 

        int MaxVal = arr[0];
        
        for(int i = 1; i < arr.size(); i++) {
            if(arr[i] > MaxVal) {
                MaxVal = arr[i];
            }
        }
        
        return MaxVal;
    }
};

Time Complexity: O(n)
Auxiliary Space: O(1)
