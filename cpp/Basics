#include <iostream>
using namespace std;

int main()
{
    int a = 5, b = 6;

    cout << (a + b) << endl;  // 11  (5 + 6)
    cout << (a - b) << endl;  // -1  (5 - 6)
    cout << (a * b) << endl;  // 30  (5 * 6)
    cout << (a / b) << endl;  // 0   (Integer division: 5/6 is 0.83, decimals are dropped)
    
    cout << (a << b) << endl; // 320 (Left shift: 5 * 2^6 = 5 * 64)
    cout << (a >> b) << endl; // 0   (Right shift: 5 / 2^6 = 0)
    
    cout << (a < b) << endl;  // 1   (True: 5 is less than 6)

    // Assignment operators change the value of 'a' permanently for the next lines
    cout << (a += b) << endl; // 11  (a becomes 11)
    cout << (a -= b) << endl; // 5   (a becomes 11 - 6 = 5)
    cout << (a *= b) << endl; // 30  (a becomes 5 * 6 = 30)
    cout << (a /= b) << endl; // 5   (a becomes 30 / 6 = 5)

    // Increment/Decrement
    cout << (a++) << endl;    // 5   (Prints current 'a', then 'a' becomes 6)
    cout << (++b) << endl;    // 7   ('b' becomes 7, then prints 7)
    cout << (a--) << endl;    // 6   (Prints current 'a', then 'a' becomes 5)
    cout << (--b) << endl;    // 6   ('
