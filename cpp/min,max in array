#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter size: ";
    cin >> n;

    // Boundary check: if size is 0, we can't find a min
    if (n <= 0) return 0;

    int arr[n];
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    // IMPORTANT: Start with the first element, not 0
    int min = arr[0];
    int max = arr[0];

    for (int i = 1; i < n; i++) {
        // Find Minimum
        if (arr[i] < min) {
            min = arr[i];
        }
        // Find Maximum
        if (arr[i] > max) {
            max = arr[i];
        }
    }

    cout << "Minimum: " << min << endl;
    cout << "Maximum: " << max << endl;

    return 0;
}
